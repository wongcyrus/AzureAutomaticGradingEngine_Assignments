{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/devcontainers/features/dotnet:2": {},
    "ghcr.io/devcontainers/features/powershell:1": {}
  },
  "hostRequirements": {
    "memory": "8gb"
  },
  "customizations": {
    "codespaces": {
      "repositories": {
        "wongcyrus/azure-isekai": {
          "permissions": {
            "contents": "write",
            "issues": "write"
          }
        }
      }
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "~/.python/current/bin/python3",
        "pylint.enabled": true,
        "pylint.path": ["/usr/local/py-utils/bin/pylint"],
        "flake8.enabled": true,
        "flake8.path": ["/usr/local/py-utils/bin/flake8"],
        "python.testing.pytestArgs": [],
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "python.analysis.extraPaths": ["./tests/unit_test_helper"],
        "pylint.args": ["--disable=C0111"]
      },
      "extensions": [
        "ms-python.python",
        "ms-python.autopep8",
        "ms-python.pylint",
        "emeraldwalk.runonsave",
        "github.copilot",
        "github.copilot-chat",
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "editorconfig.editorconfig",
        "formulahendry.dotnet-test-explorer",
        "esbenp.prettier-vscode",
        "azuretools.vscode-azurestaticwebapps",
        "ms-azuretools.vscode-azurefunctions"
      ]
    }
  }
}
